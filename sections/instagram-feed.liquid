<section class="instagram-section" data-section-id="{{ section.id }}">
  <div class="instagram-container">
    <div class="instagram-header">
      <h2 class="instagram-heading">{{ section.settings.heading }}</h2>
      {% if section.settings.handle != blank %}
        <p class="instagram-handle">
          Follow us <a href="https://instagram.com/{{ section.settings.handle | remove: '@' }}" target="_blank" rel="noopener">{{ section.settings.handle }}</a>
        </p>
      {% endif %}
    </div>
    
    <div class="instagram-grid">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link | default: '#' }}" class="instagram-item" target="_blank" rel="noopener" {{ block.shopify_attributes }}>
          {% if block.settings.image %}
            <img 
              src="{{ block.settings.image | image_url: width: 400 }}" 
              alt="Instagram post"
              loading="lazy"
            >
          {% elsif block.settings.image_asset != blank %}
            <img 
              src="{{ block.settings.image_asset | asset_url }}" 
              alt="Instagram post"
              loading="lazy"
            >
          {% else %}
            {{ 'lifestyle-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
          <div class="instagram-overlay">
            <span class="instagram-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
