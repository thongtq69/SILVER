<section class="hero-banner hero-banner--{{ section.settings.height }}" data-section-id="{{ section.id }}">
  <!-- Pink gradient background -->
  <div class="hero-background">
    {% if section.settings.background_image %}
      <img 
        src="{{ section.settings.background_image | image_url: width: 1920 }}"
        alt=""
        class="hero-bg-image"
        loading="eager"
      >
    {% else %}
      <img 
        src="{{ 'hero-banner-bg.png' | asset_url }}"
        alt=""
        class="hero-bg-image"
        loading="eager"
      >
    {% endif %}
  </div>
  
  <div class="hero-content" style="text-align: {{ section.settings.text_alignment }};">
    <!-- Crystal rose / center image -->
    {% if section.settings.center_image %}
      <div class="hero-center-image">
        <img 
          src="{{ section.settings.center_image | image_url: width: 400 }}" 
          alt="{{ section.settings.heading }}"
          class="hero-crystal-image"
          loading="eager"
        >
      </div>
    {% endif %}
    
    {% if section.settings.heading != blank %}
      <h1 class="hero-heading" style="color: {{ section.settings.text_color }};">
        {{ section.settings.heading }}
      </h1>
    {% endif %}
    
    {% if section.settings.subheading != blank %}
      <p class="hero-subheading" style="color: {{ section.settings.text_color }};">
        {{ section.settings.subheading }}
      </p>
    {% endif %}
    
    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-button btn btn-primary">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-section",
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Leave empty to use default pink gradient"
    },
    {
      "type": "header",
      "content": "Center Image"
    },
    {
      "type": "image_picker",
      "id": "center_image",
      "label": "Center image (crystal rose)"
    },
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Avalane & Co"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Exclusive Sale - Up to 30% Off"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Section height",
      "options": [
        { "value": "small", "label": "Small (400px)" },
        { "value": "medium", "label": "Medium (500px)" },
        { "value": "large", "label": "Large (600px)" },
        { "value": "fullscreen", "label": "Full screen" }
      ],
      "default": "large"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}
