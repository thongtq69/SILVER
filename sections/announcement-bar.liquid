<div class="announcement-bar" data-section-id="{{ section.id }}" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  <div class="announcement-container">
    {% if section.blocks.size > 1 %}
      <div class="announcement-slider">
        {% for block in section.blocks %}
          <div class="announcement-slide" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <span class="announcement-icon">{{ block.settings.icon }}</span>
            {% endif %}
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="announcement-link">
                {{ block.settings.text }}
              </a>
            {% else %}
              <span class="announcement-text">{{ block.settings.text }}</span>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% elsif section.blocks.size == 1 %}
      {% for block in section.blocks %}
        <div class="announcement-single" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <span class="announcement-icon">{{ block.settings.icon }}</span>
          {% endif %}
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="announcement-link">
              {{ block.settings.text }}
            </a>
          {% else %}
            <span class="announcement-text">{{ block.settings.text }}</span>
          {% endif %}
        </div>
      {% endfor %}
    {% else %}
      <div class="announcement-single">
        <span class="announcement-icon">üöö</span>
        <span class="announcement-text">Free Australia-wide shipping on orders over $100</span>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .announcement-bar {
    padding: 10px 0;
    font-size: 0.8125rem;
    font-weight: 500;
    text-align: center;
    position: relative;
    z-index: 1001;
  }
  
  .announcement-container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }
  
  .announcement-slider {
    display: flex;
    animation: slideAnnouncement 15s linear infinite;
  }
  
  .announcement-slide,
  .announcement-single {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    white-space: nowrap;
    min-width: 100%;
  }
  
  .announcement-icon {
    font-size: 1rem;
  }
  
  .announcement-link {
    color: inherit;
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .announcement-link:hover {
    opacity: 0.8;
    color: inherit;
  }
  
  @keyframes slideAnnouncement {
    0%, 33% { transform: translateX(0); }
    33.33%, 66% { transform: translateX(-100%); }
    66.66%, 100% { transform: translateX(-200%); }
  }
  
  /* Pause animation on hover */
  .announcement-slider:hover {
    animation-play-state: paused;
  }
</style>

{% schema %}
{
  "name": "Announcement Bar",
  "tag": "section",
  "class": "announcement-bar-section",
  "max_blocks": 4,
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (emoji)",
          "default": "üöö"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Free Australia-wide shipping on orders over $100"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "category": "Header",
      "blocks": [
        { "type": "announcement", "settings": { "icon": "üöö", "text": "Free Australia-wide shipping on orders over $100"} },
        { "type": "announcement", "settings": { "icon": "‚≠ê", "text": "Over 5000+ 5-star reviews from happy customers"} },
        { "type": "announcement", "settings": { "icon": "üíé", "text": "100% Authentic crystals with certificate"} }
      ]
    }
  ]
}
{% endschema %}
