<section class="featured-products-section" data-section-id="{{ section.id }}">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.settings.subheading != blank %}
      <p class="section-subheading">{{ section.settings.subheading }}</p>
    {% endif %}
    
    <div class="products-grid products-grid--{{ section.settings.columns }}">
      {% if section.settings.collection != blank %}
        {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
          {% render 'product-card', product: product, show_sale_badge: section.settings.show_sale_badge %}
        {% endfor %}
      {% elsif section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div class="product-card" {{ block.shopify_attributes }}>
            <div class="product-card-image">
              {% if section.settings.show_sale_badge and block.settings.compare_at_price > block.settings.price %}
                <span class="product-badge sale-badge">Sale</span>
              {% endif %}
              
              <a href="{{ block.settings.link | default: '#' }}" class="product-card-link">
                {% if block.settings.image %}
                  <img 
                    src="{{ block.settings.image | image_url: width: 400 }}" 
                    alt="{{ block.settings.title }}"
                    class="product-img"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% elsif block.settings.image_asset_name != blank %}
                  <img 
                    src="{{ block.settings.image_asset_name | asset_url }}" 
                    alt="{{ block.settings.title }}"
                    class="product-img"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% else %}
                  {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </a>
            </div>
            <div class="product-card-info">
              <h3 class="product-card-title">
                <a href="{{ block.settings.link | default: '#' }}">{{ block.settings.title }}</a>
              </h3>
              <div class="product-card-price">
                {% if block.settings.compare_at_price > block.settings.price %}
                  <span class="price-compare">{{ block.settings.compare_at_price | money }}</span>
                  <span class="price-current price-sale">{{ block.settings.price | money }}</span>
                {% else %}
                  <span class="price-current">{{ block.settings.price | money }}</span>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        {% for i in (1..section.settings.products_to_show) %}
          <div class="product-card product-card--placeholder">
            <div class="product-card-image">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="product-card-info">
              <h3 class="product-card-title">Product Title</h3>
              <div class="product-card-price">
                <span class="price-current">{{ 1000000 | money }}</span>
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
    
    {% if section.settings.show_view_all %}
      <div class="section-footer">
        <a href="{{ section.settings.collection.url | default: '#' }}" class="btn btn-secondary">
          {{ section.settings.view_all_text | default: 'View All' }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "featured-products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 16,
      "step": 1,
      "default": 8
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns on desktop",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" }
      ],
      "default": "4"
    },
    {
      "type": "checkbox",
      "id": "show_sale_badge",
      "label": "Show sale badge",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all button text",
      "default": "View All"
    }
  ],
  "blocks": [
    {
      "type": "product_block",
      "name": "Simulated Product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "image_asset_name",
          "label": "Image Asset Name (e.g. product-1.webp)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Product Title",
          "default": "Product Title"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price (cents)",
          "default": "19900"
        },
        {
          "type": "text",
          "id": "compare_at_price",
          "label": "Compare at Price (cents)",
          "default": "24900"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "category": "Products"
    }
  ]
}
{% endschema %}
