<section class="about-content-section" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="about-content-grid">
      <div class="about-image">
        {% if section.settings.image %}
          <img 
            src="{{ section.settings.image | image_url: width: 600 }}" 
            alt="{{ section.settings.image_alt | default: 'About us' }}"
            loading="lazy"
          >
        {% else %}
          <div class="about-image-placeholder">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="#ccc" stroke-width="1">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <circle cx="8.5" cy="8.5" r="1.5"></circle>
              <polyline points="21 15 16 10 5 21"></polyline>
            </svg>
          </div>
        {% endif %}
      </div>
      
      <div class="about-text">
        <h2 class="about-text-heading">{{ section.settings.heading }}</h2>
        <div class="about-text-content rte">
          {{ section.settings.content }}
        </div>
        
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="btn btn-primary">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .about-content-section {
    padding: var(--spacing-xl) 0;
  }
  
  .about-content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    align-items: center;
  }
  
  .about-image {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
  }
  
  .about-image img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .about-image-placeholder {
    aspect-ratio: 4/3;
    background: linear-gradient(135deg, #f0e6e0 0%, #e8dcd8 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .about-text-heading {
    font-size: 2rem;
    font-weight: 500;
    margin-bottom: var(--spacing-md);
  }
  
  .about-text-content {
    margin-bottom: var(--spacing-lg);
  }
  
  .about-text-content p {
    font-size: 1rem;
    line-height: 1.8;
    color: #555;
    margin-bottom: var(--spacing-md);
  }
  
  @media (max-width: 768px) {
    .about-content-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
    
    .about-text-heading {
      font-size: 1.75rem;
    }
  }
</style>

{% schema %}
{
  "name": "About Content",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image alt text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Who We Are"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Founded in 1985 by Daniel Avalane, Avalane & Co has grown from a small family business into a world-leading jewellery brand. Now proudly serving Australia, we bring you exquisite crystal designs that capture the essence of elegance and timeless beauty.</p><p>Every piece in our collection is carefully curated to bring your dreams to life. From stunning necklaces to elegant bracelets, we source only the finest crystals to create jewellery that tells your unique story.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ]
}
{% endschema %}
