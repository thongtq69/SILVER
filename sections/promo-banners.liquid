<section class="promo-banners-section" data-section-id="{{ section.id }}" style="background-color: {{ section.settings.background_color }};">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    <div class="promo-banners-grid promo-banners-grid--{{ section.blocks.size }}">
      {% for block in section.blocks %}
        <div class="promo-banner-card" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link }}" class="promo-banner-link">
            <div class="promo-banner-image">
              {% if block.settings.image %}
                <img 
                  src="{{ block.settings.image | image_url: width: 800 }}" 
                  alt="{{ block.settings.title }}"
                  class="promo-banner-img"
                  loading="lazy"
                  width="800"
                  height="600"
                >
              {% else %}
                {% assign block_title_downcase = block.settings.title | downcase %}
                {% if block_title_downcase contains 'necklace' %}
                  <img 
                    src="{{ 'category-necklace-new.png' | asset_url }}" 
                    alt="{{ block.settings.title }}"
                    class="promo-banner-img"
                    loading="lazy"
                    width="800"
                    height="600"
                  >
                {% elsif block_title_downcase contains 'bracelet' %}
                  <img 
                    src="{{ 'category-bracelet-new.png' | asset_url }}" 
                    alt="{{ block.settings.title }}"
                    class="promo-banner-img"
                    loading="lazy"
                    width="800"
                    height="600"
                  >
                {% elsif block_title_downcase contains 'earring' %}
                  <img 
                    src="{{ 'category-earring-new.png' | asset_url }}" 
                    alt="{{ block.settings.title }}"
                    class="promo-banner-img"
                    loading="lazy"
                    width="800"
                    height="600"
                  >
                {% elsif block_title_downcase contains 'ring' %}
                  <img 
                    src="{{ 'category-ring.png' | asset_url }}" 
                    alt="{{ block.settings.title }}"
                    class="promo-banner-img"
                    loading="lazy"
                    width="800"
                    height="600"
                  >
                {% else %}
                  {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              {% endif %}
            </div>
            
            <div class="promo-banner-overlay">
              <h3 class="promo-banner-title">{{ block.settings.title }}</h3>
              {% if block.settings.subtitle != blank %}
                <p class="promo-banner-subtitle">{{ block.settings.subtitle }}</p>
              {% endif %}
              {% if block.settings.button_text != blank %}
                <span class="promo-banner-button">{{ block.settings.button_text }}</span>
              {% endif %}
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Promo Banners",
  "tag": "section",
  "class": "promo-banners",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Timeless Elegance"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Banner image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "View Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promo Banners",
      "category": "Promotion",
      "blocks": [
        { "type": "banner", "settings": { "title": "Necklaces", "subtitle": "Timeless elegance" } },
        { "type": "banner", "settings": { "title": "Bracelets", "subtitle": "Luxury on your wrist" } },
        { "type": "banner", "settings": { "title": "Earrings", "subtitle": "Standout style" } }
      ]
    }
  ]
}
{% endschema %}
