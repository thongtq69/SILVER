<section class="about-hero-section" data-section-id="{{ section.id }}">
  <div class="about-hero-bg">
    <div class="about-hero-gradient"></div>
  </div>
  <div class="container">
    <div class="about-hero-content">
      <h1 class="about-hero-heading">{{ section.settings.heading }}</h1>
      <p class="about-hero-subheading">{{ section.settings.subheading }}</p>
    </div>
  </div>
</section>

<style>
  .about-hero-section {
    position: relative;
    padding: 100px 0;
    min-height: 400px;
    display: flex;
    align-items: center;
    overflow: hidden;
  }
  
  .about-hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  
  .about-hero-gradient {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, 
      #FFC9D6 0%, 
      #FFE4EC 30%, 
      #F0EEE4 60%, 
      #E8E4DC 100%);
  }
  
  .about-hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }
  
  .about-hero-heading {
    font-size: 3.5rem;
    font-weight: 400;
    margin-bottom: var(--spacing-md);
    color: #000;
    animation: fadeInUp 0.8s ease-out;
  }
  
  .about-hero-subheading {
    font-size: 1.25rem;
    color: #333;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }
  
  @media (max-width: 768px) {
    .about-hero-section {
      padding: 60px 0;
      min-height: 300px;
    }
    
    .about-hero-heading {
      font-size: 2.5rem;
    }
    
    .about-hero-subheading {
      font-size: 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "About Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Bringing luxury jewellery to Australia since 1985"
    }
  ]
}
{% endschema %}
