<section class="contact-section" data-section-id="{{ section.id }}" style="background-color: {{ section.settings.background_color }};">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="section-heading" style="color: {{ section.settings.text_color }};">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    
    {% if section.settings.hours != blank %}
      <p class="contact-hours" style="color: {{ section.settings.text_color }};">
        {{ section.settings.hours }}
      </p>
    {% endif %}
    
    <div class="contact-methods">
      {% if settings.contact_viber != blank %}
        <a href="viber://chat?number={{ settings.contact_viber }}" class="contact-method" title="Viber">
          <span class="contact-icon contact-icon--viber">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm4.64 14.19c-.3.7-.9 1.26-1.58 1.51-.33.12-.7.18-1.06.18-.98 0-2.08-.37-3.17-1.07-1.82-1.17-3.31-2.89-4.19-4.84-.46-1.01-.69-2-.69-2.94 0-.5.06-.99.19-1.45.22-.79.68-1.44 1.31-1.87.28-.19.58-.32.88-.38.15-.03.3-.04.45-.04.44 0 .88.15 1.26.44l.71.55c.32.25.54.58.64.97.1.39.08.8-.07 1.17l-.35.89c-.12.31-.08.66.11.93.31.45.71.89 1.18 1.29.48.41 1.01.75 1.57.99.27.12.58.11.84-.04l.85-.47c.36-.2.78-.27 1.18-.19.4.08.76.29 1.02.6l.52.61c.47.55.5 1.36.06 1.95z"/>
            </svg>
          </span>
          <span class="contact-label">Viber</span>
        </a>
      {% endif %}
      
      {% if settings.contact_whatsapp != blank %}
        <a href="https://wa.me/{{ settings.contact_whatsapp }}" class="contact-method" target="_blank" title="WhatsApp">
          <span class="contact-icon contact-icon--whatsapp">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </span>
          <span class="contact-label">WhatsApp</span>
        </a>
      {% endif %}
      
      {% if settings.contact_messenger != blank %}
        <a href="{{ settings.contact_messenger }}" class="contact-method" target="_blank" title="Messenger">
          <span class="contact-icon contact-icon--messenger">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.36 2 2 6.13 2 11.7c0 2.91 1.19 5.44 3.14 7.17.16.15.26.37.27.6l.05 1.88c.02.62.63 1.03 1.2.83l2.1-.83c.18-.07.38-.08.56-.03.99.27 2.04.42 3.13.42 5.64 0 10-4.13 10-9.7S17.64 2 12 2zm6.03 7.54l-2.94 4.66c-.47.74-1.45.92-2.15.4l-2.34-1.75c-.18-.13-.42-.13-.6 0l-3.15 2.39c-.42.32-.97-.19-.68-.64l2.94-4.66c.47-.74 1.45-.92 2.15-.4l2.34 1.75c.18.13.42.13.6 0l3.15-2.39c.42-.32.97.19.68.64z"/>
            </svg>
          </span>
          <span class="contact-label">Messenger</span>
        </a>
      {% endif %}
      
      {% if settings.contact_phone != blank %}
        <a href="tel:{{ settings.contact_phone }}" class="contact-method" title="Gọi điện">
          <span class="contact-icon contact-icon--phone">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </span>
          <span class="contact-label">Call Us</span>
        </a>
      {% endif %}
    </div>
    
    {% if section.settings.trust_badge %}
      <div class="trust-badges">
        <img 
          src="{{ section.settings.trust_badge | image_url: width: 200 }}" 
          alt="Trust Badge"
          class="trust-badge"
          loading="lazy"
        >
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Contact Section",
  "tag": "section",
  "class": "contact-section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "CONTACT US"
    },
    {
      "type": "text",
      "id": "hours",
      "label": "Support hours",
      "default": "Support available 8am - 10pm AEST daily"
    },
    {
      "type": "image_picker",
      "id": "trust_badge",
      "label": "Trust badge image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Contact Section",
      "category": "Store Information"
    }
  ]
}
{% endschema %}
