<section class="category-icons-section" data-section-id="{{ section.id }}" style="background-color: {{ section.settings.background_color }};">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    <div class="category-icons-grid">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="category-icon-card" {{ block.shopify_attributes }}>
          <div class="category-icon-image">
            {% if block.settings.image %}
              <img 
                src="{{ block.settings.image | image_url: width: 200 }}" 
                alt="{{ block.settings.title }}"
                class="icon-img"
                loading="lazy"
              >
            {% elsif block.settings.icon != blank %}
              <span class="icon-emoji">{{ block.settings.icon }}</span>
            {% else %}
              {% assign icon_title_downcase = block.settings.title | downcase %}
              {% if icon_title_downcase contains 'necklace' %}
                <img 
                  src="{{ 'icon-necklace-new.png' | asset_url }}" 
                  alt="{{ block.settings.title }}"
                  class="icon-img"
                  loading="lazy"
                >
              {% elsif icon_title_downcase contains 'bracelet' %}
                <img 
                  src="{{ 'icon-bracelet.png' | asset_url }}" 
                  alt="{{ block.settings.title }}"
                  class="icon-img"
                  loading="lazy"
                >
              {% elsif icon_title_downcase contains 'earring' %}
                <img 
                  src="{{ 'icon-earring.png' | asset_url }}" 
                  alt="{{ block.settings.title }}"
                  class="icon-img"
                  loading="lazy"
                >
              {% elsif icon_title_downcase contains 'ring' %}
                <img 
                  src="{{ 'icon-ring.png' | asset_url }}" 
                  alt="{{ block.settings.title }}"
                  class="icon-img"
                  loading="lazy"
                >
              {% else %}
                <span class="icon-placeholder">
                  <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                  </svg>
                </span>
              {% endif %}
            {% endif %}
          </div>
          <span class="category-icon-title">{{ block.settings.title }}</span>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Category Icons",
  "tag": "section",
  "class": "category-icons",
  "max_blocks": 8,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Category Icon",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Category"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon image"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Emoji icon (fallback)",
          "info": "Used if no image is set"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Icons",
      "category": "Collection",
      "blocks": [
        { "type": "icon", "settings": { "title": "Necklaces" } },
        { "type": "icon", "settings": { "title": "Bracelets" } },
        { "type": "icon", "settings": { "title": "Earrings" } },
        { "type": "icon", "settings": { "title": "Rings" } }
      ]
    }
  ]
}
{% endschema %}
