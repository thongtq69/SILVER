<section class="featured-categories-section" data-section-id="{{ section.id }}">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    <div class="categories-grid categories-grid--{{ section.blocks.size }}">
      {% for block in section.blocks %}
        <div class="category-card" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link }}" class="category-link">
            {% if block.settings.image %}
              <div class="category-image">
                <img 
                  src="{{ block.settings.image | image_url: width: 600 }}" 
                  alt="{{ block.settings.title }}"
                  class="category-img"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              </div>
            {% elsif block.settings.collection %}
              <div class="category-image">
                <img 
                  src="{{ block.settings.collection.featured_image | image_url: width: 600 }}" 
                  alt="{{ block.settings.collection.title }}"
                  class="category-img"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              </div>
            {% else %}
              <div class="category-image category-image--placeholder">
                {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
            
            <div class="category-info">
              <h3 class="category-title">
                {{ block.settings.title | default: block.settings.collection.title }}
              </h3>
              {% if block.settings.link_text != blank %}
                <span class="category-link-text">{{ block.settings.link_text }}</span>
              {% endif %}
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Categories",
  "tag": "section",
  "class": "featured-categories",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Danh mục nổi bật"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns on desktop",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" }
      ],
      "default": "3"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom image (optional)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom title (optional)"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Custom link (optional)"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link text",
          "default": "Xem mẫu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Categories",
      "category": "Collection",
      "blocks": [
        { "type": "category", "settings": { "title": "Dây chuyền" } },
        { "type": "category", "settings": { "title": "Vòng tay" } },
        { "type": "category", "settings": { "title": "Bông tai" } }
      ]
    }
  ]
}
{% endschema %}
